#loading
	display none
	position fixed
	top 0
	right 0
	left 0
	bottom 0
	z-index 99999

	.overlay
		background-color #000000
		width 100%
		height 100%
		z-index 100
		-ms-filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=540)')
		filter unquote('alpha(opacity=40)')
		-moz-opacity 0.4
		-khtml-opacity 0.4
		opacity 0.4

	.bar
		position fixed
		width 350px
		left 50%
		top 50%
		margin-left -175px
		z-index 200